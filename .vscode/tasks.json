{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "My Task",
            "command": "/usr/bin/gcc",
            "type": "shell",
            "args": [
                "-g",
                "${file}",
                "-o",
                "-I headers",
                "${fileDirname}${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        }
    ]
}